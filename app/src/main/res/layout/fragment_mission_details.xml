<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_baby_blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="16dp"
            android:elevation="6dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <!-- Titre -->
                <TextView
                    android:id="@+id/tvMissionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titre de la mission"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/bleu_marine"
                    android:layout_marginBottom="8dp"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvMissionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description de la mission"
                    android:textSize="15sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp"/>

                <!-- Date -->
                <TextView
                    android:id="@+id/tvMissionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… 18/12/2025"
                    android:textSize="14sp"
                    android:textColor="@color/green_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- RÃ´le -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir votre rÃ´le"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spinnerRole"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginBottom="16dp"/>

                <!-- MÃ©decin -->
                <EditText
                    android:id="@+id/etSpecialite"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="SpÃ©cialitÃ© (MÃ©decin)"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <!-- Superviseur -->
                <EditText
                    android:id="@+id/etProfession"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Profession (Superviseur)"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etCaracteristiques"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="CaractÃ©ristiques"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"/>

                <!-- Bouton -->
                <Button
                    android:id="@+id/btnDemanderParticipation"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Participer"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_primary"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
