<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_gray"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etNom"
            android:hint="Nom"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPrenom"
            android:hint="Prénom"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etCin"
            android:hint="CIN"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etAdresse"
            android:hint="Adresse"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etNumero"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="@color/pastel_blue"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegister"
            android:text="S'inscrire"
            android:backgroundTint="@color/pastel_green"
            android:textColor="@color/text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvGoToLogin"
            android:text="Déjà inscrit ? Se connecter"
            android:textColor="@color/pastel_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"/>
    </LinearLayout>
</ScrollView>
