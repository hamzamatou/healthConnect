<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Card Mission -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:radius="20dp"
            android:elevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Titre -->
                <TextView
                    android:id="@+id/tvMissionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titre de la mission"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#052C57"
                    android:layout_marginBottom="12dp"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvMissionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description de la mission"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <!-- Date -->
                <TextView
                    android:id="@+id/tvMissionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… 18/12/2025"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="20dp"/>

                <!-- RÃ´le -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir votre rÃ´le"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="6dp"/>

                <Spinner
                    android:id="@+id/spinnerRole"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginBottom="16dp"/>

                <!-- Champs conditionnels -->
                <EditText
                    android:id="@+id/etSpecialite"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="SpÃ©cialitÃ© (MÃ©decin)"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etProfession"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Profession (Superviseur)"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etCaracteristiques"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="CaractÃ©ristiques"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"/>

                <!-- Bouton Participer -->
                <Button
                    android:id="@+id/btnDemanderParticipation"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Participer"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
