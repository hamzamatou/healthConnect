<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#F8FDFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonjour Mr le superviseur,"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#52C2C7"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merci pour votre contribution ! Gérez cette mission avec soin et efficacité."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnVerifierPresence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vérifier Participants (Présence)"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnVerifierMateriel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vérifier Matériel"
        android:backgroundTint="#52C2C7"/>
    <Button
        android:id="@+id/btnCloturerMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clôturer la mission"
        android:backgroundTint="#F44336"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

</LinearLayout>