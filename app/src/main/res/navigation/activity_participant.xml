<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_participant"
    app:startDestination="@id/missionFragment">

    <!-- Liste des missions -->
    <fragment
        android:id="@+id/missionFragment"
        android:name="com.example.healthproject.ui.coordinateur.MissionListFragment"
        android:label="Missions">
        <action
            android:id="@+id/action_missionFragment_to_descriptionMissionFragment"
            app:destination="@id/descriptionMissionFragment" />
    </fragment>

    <!-- Mes demandes -->
    <fragment
        android:id="@+id/mesDemandesFragment"
        android:name="com.example.healthproject.ui.participant.MesDemandesFragment"
        android:label="Mes demandes">
        <action
            android:id="@+id/action_mesDemandesFragment_to_descriptionMissionFragment"
            app:destination="@id/descriptionMissionFragment" />
    </fragment>

    <!-- Description mission -->
    <fragment
        android:id="@+id/descriptionMissionFragment"
        android:name="com.example.healthproject.ui.participant.DescriptionMissionFragment"
        android:label="Description Mission">
        <argument
            android:name="missionId"
            app:argType="string" />
        <argument
            android:name="isSuperviseur"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_descriptionMissionFragment_to_participantMessageFragment"
            app:destination="@id/participantMessageFragment" />
        <action
            android:id="@+id/action_descriptionMissionFragment_to_supervisionDashboardFragment"
            app:destination="@id/supervisionDashboardFragment" />
    </fragment>

    <!-- Dashboard supervision -->
    <fragment
        android:id="@+id/supervisionDashboardFragment"
        android:name="com.example.healthproject.ui.superviseur.SupervisionDashboardFragment"
        android:label="Gestion Supervision">
        <argument
            android:name="missionId"
            app:argType="string" />
        <action
            android:id="@+id/action_to_presence"
            app:destination="@id/presenceFragment" />
        <action
            android:id="@+id/action_to_materiel"
            app:destination="@id/materielFragment" />
    </fragment>

    <!-- PrÃ©sence -->
    <fragment
        android:id="@+id/presenceFragment"
        android:name="com.example.healthproject.ui.superviseur.presence.PresenceFragment"
        android:label="VÃ©rification PrÃ©sence">
        <argument
            android:name="missionId"
            app:argType="string" />
    </fragment>

    <!-- MatÃ©riel -->
    <fragment
        android:id="@+id/materielFragment"
        android:name="com.example.healthproject.ui.superviseur.materiel.MaterielFragment"
        android:label="VÃ©rification MatÃ©riel">
        <argument
            android:name="missionId"
            app:argType="string" />
    </fragment>

    <!-- Participation -->
    <fragment
        android:id="@+id/participationFragment"
        android:name="com.example.healthproject.ui.participant.ParticipationFragment"
        android:label="Participation" />

    <!-- DÃ©tails mission -->
    <fragment
        android:id="@+id/missionDetailsFragment"
        android:name="com.example.healthproject.ui.participant.MissionDetailsFragment"
        android:label="DÃ©tails Mission">
        <argument
            android:name="missionId"
            app:argType="string" />
    </fragment>

    <!-- Messagerie -->
    <fragment
        android:id="@+id/participantMessageFragment"
        android:name="com.example.healthproject.ui.participant.ParticipantMessageFragment"
        android:label="Messages">
        <argument
            android:name="MISSION_ID"
            app:argType="string" />
    </fragment>

    <!-- Assistant IA -->
    <fragment
        android:id="@+id/pharmaChatFragment"
        android:name="com.example.healthproject.ui.pharmaassistant.PharmaChatFragment"
        android:label="Assistant IA" />

    <!-- ðŸ”¥ Profil participant -->
    <fragment
        android:id="@+id/participantProfileFragment"
        android:name="com.example.healthproject.ui.participant.ProfilParticipantFragment"
        android:label="Profil" />

</navigation>
